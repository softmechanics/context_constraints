+countTyVars :: [Type] -> Int
+countTyVars tys = 
+  sum $ map count tys
+  where count :: Type -> Int
+        count (TyVarTy _) = 1
+        count (AppTy ty1 ty2) = (count ty1) + (count ty2)
+        count (TyConApp _ tys') = countTyVars tys'
+        count (FunTy ty1 ty2) = (count ty1) + (count ty2)
